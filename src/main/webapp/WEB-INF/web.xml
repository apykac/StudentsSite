<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--Servlets-->
    
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>ru.innopolis.stc9.controllers.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>AdminPageServlet</servlet-name>
        <servlet-class>ru.innopolis.stc9.controllers.AdminPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminPageServlet</servlet-name>
        <url-pattern>/admin_page</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserPageServlet</servlet-name>
        <servlet-class>ru.innopolis.stc9.controllers.UserPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserPageServlet</servlet-name>
        <url-pattern>/user_page</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>GuestServlet</servlet-name>
        <servlet-class>ru.innopolis.stc9.controllers.GuestPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GuestServlet</servlet-name>
        <url-pattern>/guest_page</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServiceServlet</servlet-name>
        <servlet-class>ru.innopolis.stc9.controllers.ServiceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServiceServlet</servlet-name>
        <url-pattern>/method</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>PrintStudentsToPageServlet</servlet-name>
        <servlet-class>ru.innopolis.stc9.controllers.MethodServlets.PrintStudentsToPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PrintStudentsToPageServlet</servlet-name>
        <url-pattern>/method/get_students_to_page</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddStudentServlet</servlet-name>
        <servlet-class>ru.innopolis.stc9.controllers.MethodServlets.AddStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddStudentServlet</servlet-name>
        <url-pattern>/method/add_student</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>DelStudentServlet</servlet-name>
        <servlet-class>ru.innopolis.stc9.controllers.MethodServlets.DelStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DelStudentServlet</servlet-name>
        <url-pattern>/method/del_student</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DefaultServlet</servlet-name>
        <servlet-class>ru.innopolis.stc9.controllers.DefaultServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DefaultServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>AddCourseServlet</servlet-name>
        <servlet-class>ru.innopolis.stc9.controllers.MethodServlets.AddCourseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddCourseServlet</servlet-name>
        <url-pattern>/method/add_course</url-pattern>
    </servlet-mapping>

    <!--Filters-->

    <filter>
        <filter-name>LoginValidFilter</filter-name>
        <filter-class>ru.innopolis.stc9.controllers.filters.LoginValidFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginValidFilter</filter-name>
        <url-pattern>/login_valid</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>LogFilter</filter-name>
        <filter-class>ru.innopolis.stc9.controllers.filters.LogFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LogFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>